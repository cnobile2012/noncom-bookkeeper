[run]
source = src
omit =
    */tests/*
    */mock/*
    */examples/*

[report]
show_missing = True
skip_covered = True
precision = 3

# Regexes for lines to exclude from consideration
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover

[html]
title = Noncommercial Accounting System
directory = docs/htmlcov
